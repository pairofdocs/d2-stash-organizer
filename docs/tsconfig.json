{
  "compilerOptions": {
    "module": "esnext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "moduleResolution": "node",
    "lib": ["es2020", "dom", "dom.Iterable"],
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ]
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
